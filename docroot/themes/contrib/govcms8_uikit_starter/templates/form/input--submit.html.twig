{% extends '@govcms8_uikit/button/button.twig' %}
{# Completely overrides the button.twig template until following issue is solved.
# https://www.drupal.org/project/drupal/issues/1671190
#}

{% block button %}
  <input{{ attributes.addClass(classes).removeClass('button', 'button--primary') }} />{{ children }}
{% endblock %}
